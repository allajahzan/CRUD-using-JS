<%- include('../partials/header') %>

  <body style="background-color: white;" onload="onloadUserSignUp()"></body>
  <%- include('../partials/navbar') %>

    <div class="container center-card" id="signup-section">
      <div class="row signup-row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 img-div">
          <img src="/images/pic1.jpg" alt="">
        </div>
        <div id="signin" class="col-sm-12 col-md-12 col-lg-6 col-xl-6 cards">


          <div class="title">
            <h1>User</h1>
            <div class="select-user">
              <p>Sign-Up an account</p>
              <!-- <p style="color: blue;" class="p" id="getAdmin">Admin?</p> -->
            </div>
          </div>

          <form id="signup-form" name="signin-form">
            <div class="form">

                <div class="email">
                    <input id="uname-signup" type="name" placeholder="Name" name="name" autocomplete="off" required><br>
                    <span id="signup-error-name" style="color: red;" class="material-symbols-outlined"></span>
                  </div>

              <div class="email">
                <input id="uemail-signup"  type="email" placeholder="Email Id" name="email" autocomplete="off" required><br>
                <span id="signup-error-email" style="color: red;" class="material-symbols-outlined"></span>
              </div>

              <div class="email">
                <input id="uphoneNo-signup"  type="text" placeholder="Phone No" name="phoneNo" autocomplete="off" required><br>
                <span id="signup-error-phoneNo" style="color: red;" class="material-symbols-outlined"></span>
              </div>

              <div class="password">
                <input type="password" class="password" name="password" placeholder="Password" id="signup-password"
                  autocomplete="off" maxlength="16" minlength="8" required> <br>
                <span onclick="changeSignUp()" id="visibility-signup"
                  class="material-symbols-outlined visibility">visibility_off</span>
                  <span id="signup-error-password" style="color: red;" class="material-symbols-outlined"></span>
              </div>

             <div style="display: flex; position: relative;">
              <input type="file" name="upic" id="upic-signup" placeholder="Profile Pic"> <br>
              <p style="z-index: 1000; position: absolute; right: 10px; top: 13px;">Image(optional)</p>
             </div>

              <input type="submit" value="Sign-In" class="btn-signin">
              <br>
              <p>Already Have An Account?&nbsp<a style="color: blue; cursor: pointer;" id="create" href="/signin/user">Sign-In</a></p>

              <div id="show-success-message">
                <p  id="msg-p-signup" style="text-align: center; margin-bottom: 0px; color: green;">Successfully Registered</p>
                <span id="msg-symb-signup" style="color: green; margin-left: 5px;" class="material-symbols-outlined">check_circle</span>
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>

<%- include('../partials/footer') %>
